.SideBar
  .SideBar__upper
    .SideBar__upper__header
      .SideBar__upper__header__list
        %h3.SideBar__upper__header__list__userName
          Username:
          = current_user.username
        %ul.SideBar__upper__header__list__icons
          %li.SideBar__upper__header__list__icons-edit
          = link_to new_group_path do
            = icon('far', 'edit', class: "btn--edit")
          %li.SideBar__upper__header__list__icons-cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "btn--cog")

  .SideBar__middle
    - current_user.groups.each do |group|
      .SideBar__middle__container
        = link_to '#' do
          .SideBar__middle__container__groupName
            = group.name
          .SideBar__middle__container__messageList
            メッセージはまだありません

  .SideBar__under